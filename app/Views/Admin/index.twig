{% extends 'Admin/layouts/index.twig' %}

{% block title %}Admin - Dashboard{% endblock %}

{% block page_content %}
<h1>Admin - Dashboard</h1>
  <div class="row">
    {% for item in menu %}
      <div class="col-sm-4 col-lg-3">
        <div class="col card-box bg-{{ item.color }}" data-href="{{ item.link }}">
          <p class="text-white text-center h3">{{ item.title }}</p>
        </div>
        <p class="card-description text-center">{{ item.description }}</p>
      </div>
    {% endfor %}
  </div>
{% endblock %}

{% block footer_scripts %}
{{ parent() }}
<script>
  $(document).ready(function () {
    $('.card-box').click(function () {
        var href = $(this).data('href');
        window.location.href = href;
    });
  });
</script>
{% endblock %}
