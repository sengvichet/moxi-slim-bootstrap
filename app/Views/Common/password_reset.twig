{% extends 'Common/layouts/index.twig' %}
{% block title %}Dealers{% endblock %}
{% block content %}
<div class="row">
  <div class="col">
    <h1>Reset Password</h1>
  </div>
</div>
{% if messages is not empty %}
  <div class="row justify-content-md-center mb-5">
    <div class="col col-md-6">
      <ul class="list-group">
        {% if messages['error'] is defined %}
          {% for message in messages['error'] %}
            <li class="list-group-item list-group-item-danger">{{ message }}</li>
          {% endfor %}
        {% elseif messages['message'] is defined %}
          {% for message in messages['message'] %}
            <li class="list-group-item
              list-group-item-{% if message.status == 'success' %}success{% else %}danger{% endif %}">
              {{ message.text }}
            </li>
          {% endfor %}
        {% endif %}
      </ul>
    </div>
  </div>
{% endif %}
<div class="row justify-content-md-center">
  <div class="col col-md-6">
    <form action="/{{ action }}" method="POST">
      <div class="form-group">
        <label for="email-input">Email address</label>
        <div class="input-group mb-3">
            <input type="text" id="email-input" name="email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="reset-button">
            <div class="input-group-append">
                <button class="btn btn-primary" type="submit" id="reset-button">Reset</button>
            </div>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}
